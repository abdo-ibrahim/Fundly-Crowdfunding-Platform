{
  "compilerOptions": {
    "rootDir": "./js",
    "outDir": "./dist",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": false,
    "sourceMap": false,
    "moduleDetection": "auto"
  },
  "include": ["js/**/*"]
}

